<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Off-Mapper">

	<select id="selectSearchOffList" resultType="off"> <!-- 휴가내역 -->
		select *
		from off
		where offNum is not null
		
	
	</select>
	
	<select id="insertOff">
		insert into
		off(offNum, mno, startDate, endDate)
		value=(#{offNum},#{mno},#{startDate},#{endDate})
	</select>
	
	<select id="removeOff" parameterType="int">
		delete
		from off
		where offNum=#{offNum}
	</select>
	
</mapper>